<h1>Contacts</h1>

<% if current_user %>
<ul>
  <% current_user.contacts.each do |contact| %>

    <li><%= link_to contact.name, contact_path(contact) %></li>

  <% end %>
</ul>
<%= link_to "New Contact", new_contact_path %>
<%= link_to "Send a Message", new_message_path %>

<% else %>

<p>Please log in.</p>


<% end %>
